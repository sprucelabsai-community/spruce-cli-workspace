{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2017",
		"lib": ["es2017"],
		"allowJs": true,
		"declaration": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"paths": {
			"*": ["node_modules/*"],
			"#spruce/*": ["packages/spruce-cli/.spruce/*"]
		}
	},
	"exclude": ["**/node_modules/**"]
}
