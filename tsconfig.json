{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2017",
		"lib": ["es2017"],
		"allowJs": true,
		"declaration": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"#spruce/*": [
				"node_modules/@sprucelabs/schema/build/*",
				"node_modules/@sprucelabs/schema/build/src/*"
			]
		}
	},
	"include": ["./*.ts", "./**/*.ts"],
	"exclude": ["**/node_modules/**"]
}
