{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "cli:attach",
			"port": 5200,
			"restart": true,
			"timeout": 10000
		},
		{
			"type": "node",
			"request": "launch",
			"name": "cli:debug",
			"protocol": "inspector",
			"runtimeExecutable": "yarn",
			"runtimeArgs": ["run", "local"],
			"console": "integratedTerminal",
			"port": 5200,
			"cwd": "${workspaceFolder}/packages/spruce-cli",
			"localRoot": "${workspaceRoot}/packages/spruce-cli",
			"remoteRoot": "${workspaceRoot}/packages/spruce-cli",
			"env": {
				"COMMANDS": "${input:commands}"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "test:file",
			"runtimeExecutable": "${env:NVM_BIN}/node",
			"runtimeArgs": [
				"--inspect-brk",
				"${workspaceFolder}/node_modules/.bin/jest",
				"${relativeFile}",
				"--no-cache"
			],
			"port": 9229,
			"cwd": "${fileDirname}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"env": {
				"TESTING": "true"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "test:all",
			"runtimeExecutable": "${env:NVM_BIN}/node",
			"runtimeArgs": [
				"--inspect-brk",
				"${workspaceFolder}/node_modules/.bin/jest"
			],
			"port": 9229,
			"cwd": "${fileDirname}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"env": {
				"TESTING": "true"
			}
		}
	],
	"inputs": [
		{
			"id": "commands",
			"type": "promptString",
			"description": "ðŸŒ²ðŸ¤– Command (user:login) + args"
		}
	]
}
