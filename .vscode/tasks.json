{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch.build",
			"group": "build",
			"label": "watch.build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"type": "npm",
			"script": "sync.ct",
			"group": "build",
			"problemMatcher": [],
			"label": "sync.ct",
			"runOptions": {
				"runOn": "folderOpen"
			},
			"promptOnClose": false,
			"presentation": {
				"panel": "dedicated",
				"focus": false,
			}
		},
		{
			"label": "test.file",
			"command": "spruce",
			"args": [
				"test",
				"--inspect",
				"5200",
				"--pattern",
				"${fileBasenameNoExtension}",
				"--shouldWatch"
			],
			"options": {
				"cwd": "${workspaceFolder}/packages/spruce-cli"
			},
			"promptOnClose": false,
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "test.reporter",
			"command": "spruce",
			"args": [
				"test",
				"--inspect",
				"5200",
				"--shouldTestAtStart",
				"false"
			],
			"options": {
				"cwd": "${workspaceFolder}/packages/spruce-cli"
			},
			"promptOnClose": false,
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		}
	]
}