{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "test.file",
			"command": "spruce",
			"args": [
				"test",
				"--inspect",
				"5200",
				"--pattern",
				"${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}/packages/spruce-cli"
			},
			"promptOnClose": false,
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		}
	]
}