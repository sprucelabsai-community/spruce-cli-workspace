{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch.build",
			"group": "build",
			"label": "watch.build",
			"presentation": {
				"reveal": "silent",
				"panel": "dedicated",
				"clear": true
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"problemMatcher": {
				"pattern": {
					"regexp": "@sprucelabs\\/spruce-cli:.*\\] (.*)\\((\\d+),(\\d+)\\):\\s+error (.*)",
					"file": 1,
					"line": 2,
					"message": 4
				},
				"background": {
					"activeOnStart": true
				},
				"fileLocation":["relative", "${workspaceFolder}/packages/spruce-cli/"]		
			}
		},
		{
			"type": "npm",
			"script": "sync.ct",
			"group": "build",
			"problemMatcher": [],
			"label": "sync.ct",
			"runOptions": {
				"runOn": "folderOpen"
			},
			"promptOnClose": false,
			"presentation": {
				"panel": "dedicated",
				"focus": false,
				"reveal": "silent"
			}
		},
		{
			"label": "test.reporter",
			"command": "spruce",
			"args": [
				"test",
				"--shouldHoldAtStart",
				"true",
				"--shouldWatch",
				"--inspect",
				"5200"
			],
			"options": {
				"cwd": "${workspaceFolder}/packages/spruce-cli"
			},
			"promptOnClose": false,
			"group": "test",
			"runOptions": {
				"runOn": "folderOpen"
			},
			"presentation": {
				"panel": "shared",
				"focus": true,
			}
		},
		{
			"label": "test.file",
			"command": "spruce",
			"args": [
				"test",
				"--inspect",
				"5200",
				"--pattern",
				"${fileBasenameNoExtension}",
				"--shouldWatch"
			],
			"options": {
				"cwd": "${workspaceFolder}/packages/spruce-cli"
			},
			"promptOnClose": false,
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
			}
		}
	]
}