{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch.build",
			"group": "build",
			"problemMatcher": [
				"$tsc"
			],
			"label": "npm: watch.build",
			"detail": "lerna run watch.build --stream --parallel",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "test.file",
			"command": "spruce",
			"args": [
				"test",
				"--inspect",
				"5200",
				"--pattern",
				"${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}/packages/spruce-cli"
			},
			"promptOnClose": false,
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "test.reporter",
			"command": "spruce",
			"args": [
				"test",
				"--inspect",
				"5200",
				"--shouldTestAtStart",
				"false"
			],
			"options": {
				"cwd": "${workspaceFolder}/packages/spruce-cli"
			},
			"promptOnClose": false,
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		}
	]
}