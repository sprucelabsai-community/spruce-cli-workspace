{
	"version": "0.0.1",
	"private": true,
	"name": "spruce-cli-workspace",
	"license": "MIT",
	"workspaces": [
		"packages/spruce-core-schemas",
		"packages/spruce-templates",
		"packages/spruce-skill-utils",
		"packages/spruce-cli"
	],
	"engines": {
		"node": ">=12",
		"npm": ">=6"
	},
	"scripts": {
		"lint": "lerna run lint --parallel",
		"lint.tsc": "lerna run lint.tsc --parallel",
		"lint.fix": "lerna run lint.fix --parallel",
		"lint.watch": "lerna run lint.watch --stream --parallel",
		"rebuild": "yarn clean.all && yarn && yarn build",
		"rebuild.watch": "yarn clean.all && yarn && yarn build.watch",
		"build": "lerna run build",
		"build.types": "lerna run build.types",
		"build.watch": "lerna run build.watch --stream --parallel",
		"test": "lerna run test --parallel --",
		"test.watch": "lerna run test --parallel",
		"publish": "lerna publish",
		"clean": "lerna run clean --parallel",
		"clean.cache": "lerna run clean.cache --parallel",
		"clean.all": "lerna run clean",
		"arkit": "lerna run arkit",
		"arkit.png": "lerna run arkit.png",
		"upgrade.packages": "yarn run upgrade.packages.all",
		"upgrade.packages.yarn2": "jq -r '(.dependencies, .devDependencies) | keys | .[]' package.json packages/*/package.json | sort |uniq |egrep -v 'spruce-skill-utils|spruce-templates' | xargs yarn up",
		"upgrade.packages.all": "(yarn run upgrade.packages.yarn2 || true) && rm -f yarn.lock && (yarn || true) && (yarn lint.fix || true)",
		"upgrade.packages.test": "yarn run upgrade.packages.all && yarn lint && yarn build && yarn test"
	},
	"devDependencies": {
		"@babel/cli": "^7.11.6",
		"@babel/core": "^7.11.6",
