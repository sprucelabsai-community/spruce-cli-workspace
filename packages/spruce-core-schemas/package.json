{
	"name": "@sprucelabs/spruce-core-schemas",
	"publishConfig": {
		"access": "public"
	},
	"version": "10.29.9",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"license": "MIT",
	"files": [
		"build/**/*",
		"tsconfig.json"
	],
	"description": "Schemas provided by the Spruce platform to all skills.",
	"keywords": [
		"node",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-cli",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-cli/issues"
	},
	"scripts": {
		"build": "yarn build.babel && yarn build.types && yarn build.resolve-paths",
		"build.types": "tsc --emitDeclarationOnly && echo PASS",
		"build.babel": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps --copy-files --root-mode upward",
		"build.watch": "concurrently 'yarn run build.babel --watch' \"chokidar 'src/**/*' -c 'yarn build.types'\"",
		"build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
		"rebuild": "cd ../ && yarn rebuild",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"lint.watch": "chokidar 'src/**/*' '../spruce-templates/src/**' -c 'yarn lint.tsc'",
		"release": "semantic-release"
	},
	"dependencies": {
		"@sprucelabs/error": "^2.2.324",
		"@sprucelabs/schema": "^12.0.38"
	},
	"devDependencies": {
		"@babel/cli": "^7.11.6",
		"@babel/core": "^7.11.6",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-proposal-decorators": "^7.10.5",
		"@babel/plugin-transform-runtime": "^7.11.5",
		"@babel/preset-env": "^7.11.5",
		"@babel/preset-typescript": "^7.10.4",
		"@babel/runtime": "^7.11.2",
		"@sprucelabs/babel-plugin-schema": "^3.0.15",
		"@types/node": "^14.11.2",
		"@typescript-eslint/eslint-plugin": "^4.2.0",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.3.0",
		"conventional-changelog-sprucelabs": "^1.1.1",
		"eslint": "^7.9.0",
		"eslint-config-spruce": "^10.9.59",
		"eslint-import-resolver-node": "^0.3.4",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.1",
		"eslint-plugin-spruce": "^10.9.60",
		"prettier": "^2.1.2",
		"typescript": "^4.0.3"
	},
	"gitHead": "94ce410c05180cdfa9b6ca4b9e47061d52ac4e71"
}
