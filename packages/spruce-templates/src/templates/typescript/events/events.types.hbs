import { IMercuryEventContract } from '@sprucelabs/mercury'
import { SpruceSchemas } from '#spruce/schemas/schemas.types'

export const SpruceEvents = {
	{{#each eventTemplate}}
	{{@key}}: {
		{{#each eventTemplateItems}}
		{{eventNamePascal}}: '{{eventName}}',
		{{/each}}
	}
	{{/each}}
} as const

export interface IMyEventContract extends IMercuryEventContract {
	{{#each eventTemplate}}
	{{#if (eq @key 'Local')}}
	{{#each eventTemplateItems}}
	'{{eventName}}': {
		emitPayload: SpruceSchemas.Local.I{{eventNamePascal}}EmitPayload
		responsePayload: SpruceSchemas.Local.I{{eventNamePascal}}ResponsePayload
	},
	{{/each}}
	{{/if}}
	{{/each}}
}