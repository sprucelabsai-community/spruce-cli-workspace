export default async function autoloader<
	K extends {{namePascal}}[]
>(options: {
	options: {{#each constructorOptionInterfaces}} {{#unless @first}}|{{/unless}} {{name}}{{/each}}
	after?: (instance: {{namePascalPlural}}) => Promise<void>
	only?: K
}): Promise<K extends undefined ? {{namePascalPlural}} : Pick<{{namePascalPlural}}, K[number]>> {
	const { options: constructorOptions, after, only } = options
	const siblings:Partial<{{namePascalPlural}}> = {}

	{{#each classes}}
	if (!only || only.indexOf({{../namePascal}}.{{namePascal}}) > -1) {
		const {{nameCamel}}{{../namePascal}} = new {{className}}(constructorOptions)
		if (after) {
			await after({{nameCamel}}{{../namePascal}})
		}
		siblings.{{nameCamel}} = {{nameCamel}}{{../namePascal}}
	}
	{{/each}}

	return siblings as K extends undefined ? {{namePascalPlural}} : Pick<{{namePascalPlural}}, K[number]>
}
