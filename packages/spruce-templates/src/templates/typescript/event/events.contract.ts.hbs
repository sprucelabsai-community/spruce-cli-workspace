{{#if shouldImportCoreEvents}}import { coreEventContracts } from '@sprucelabs/mercury-types'{{/if}}

{{#each contracts}}
import {{namespaceCamel}}{{namePascal}}EventContract_{{version}}{{#if isLocal}}, { {{namePascal}}EventContract as {{namespacePascal}}{{namePascal}}EventContract_{{version}}  }{{/if}} from '#spruce/events/{{ namespaceCamel }}/{{ nameCamel }}.{{ version }}.contract'
{{/each}}

export default [
    {{#each contracts}}
    {{namespaceCamel}}{{namePascal}}EventContract_{{version}},
    {{/each}}
    {{#if shouldImportCoreEvents}}...coreEventContracts,{{/if}}
]

declare module '{{skillEventContractTypesFile}}' {
    interface SkillEventSignatures {
    {{#each contracts}}
    {{#if isLocal}}
        {{#each eventSignatures}}
        '{{@key}}': {{../namespacePascal}}{{../namePascal}}EventContract_{{../version}}['eventSignatures']['{{@key}}'],
        {{/each}}
    {{/if}}
    {{/each}}
    }
}