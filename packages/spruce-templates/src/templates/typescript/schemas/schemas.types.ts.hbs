			{{> schemaValues schema=definition renderAs="type" }}
		}

	}

	export declare namespace {{../namespacePrefix}}.{{namespace}}.{{namePascal}}{{#if (isDefined definition.version)}}.{{definition.version}}{{/if}} {
		/** The interface for the schema definition for a {{nameReadable}} */
		export interface IDefinition extends SpruceSchema.ISchemaDefinition {
			{{> schemaDefinition namespace=namespace schema=definition renderAs="type" }}
		}

		/** The type of a schema instance built off this definition */
		export type Instance = Schema<{{../namespacePrefix}}.{{namespace}}.{{namePascal}}{{#if (isDefined definition.version)}}.{{definition.version}}{{/if}}.IDefinition>

