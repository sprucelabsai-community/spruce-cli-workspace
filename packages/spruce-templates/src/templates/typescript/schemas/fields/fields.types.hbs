import FieldType from '#spruce:schema/fields/fieldType'

{{#each fieldTemplateItems}}
{{#if isLocal}}
import {{className}}, { I{{namePascal}}Definition } from '{{package}}'
{{/if}}
{{#unless isLocal}}
import { I{{namePascal}}Definition, {{className}} } from '{{package}}'
{{/unless}}
{{/each}}


/** Field definition union */
export type FieldDefinition = {{#each fieldTemplateItems}}| I{{namePascal}}Definition{{/each}}

/** Field class union */
export type FieldClass = {{#each fieldTemplateItems}}| typeof {{className}}{{/each}}

/** Field instance union **/
export type Field = {{#each fieldTemplateItems}}| {{className}}{{/each}}


/** Type for looking up field definitions by field type */
export type FieldDefinitionMap = {
	{{#each fieldTemplateItems}}
	[FieldType.{{pascalType}}]: I{{namePascal}}Definition
	{{/each}}
}


/** Type for looking up field definitions by field type */
export interface IFieldDefinitionMap {
	{{#each fieldTemplateItems}}
	[FieldType.{{pascalType}}]: I{{namePascal}}Definition
	{{/each}}
}

/** All field instances */
export interface IFieldMap {
	{{#each fieldTemplateItems}}
	[FieldType.{{pascalType}}]: {{namePascal}}
	{{/each}}
}

