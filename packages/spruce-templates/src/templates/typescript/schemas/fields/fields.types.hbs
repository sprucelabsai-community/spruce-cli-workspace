import { FieldType } from '#spruce:schema/fields/fieldType'

{{#each fieldTemplateItems}}
{{#if isLocal}}
import {{className}}, { I{{pascalName}}Definition } from '{{package}}'
{{/if}}
{{#unless isLocal}}
import { I{{pascalName}}Definition, {{className}} } from '{{package}}'
{{/unless}}
{{/each}}


/** Field definition union */
export type FieldDefinition = {{#each fieldTemplateItems}}| I{{pascalName}}Definition{{/each}}

/** Field class union */
export type FieldClass = {{#each fieldTemplateItems}}| typeof {{className}}{{/each}}

/** Field instance union **/
export type Field = {{#each fieldTemplateItems}}| {{className}}{{/each}}


/** Type for looking up field definitions by field type */
export type FieldDefinitionMap = {
	{{#each fieldTemplateItems}}
	[FieldType.{{pascalType}}]: I{{pascalName}}Definition
	{{/each}}
}

/** Value for looking up field classes by field type */
export const FieldClassMap: Record<FieldType, FieldClass> = {
		{{#each fieldTemplateItems}}
		[FieldType.{{pascalType}}]: {{className}},
		{{/each}}
}

/** Interface for looking up classes by field type */
export interface IFieldClassMap {
		{{#each fieldTemplateItems}}
		[FieldType.{{pascalType}}]: {{className}},
		{{/each}}
}
