{
	"name": "{{name}}",
	"description": "{{description}}",
	"version": "0.0.1",
	"homepage": "https://github.com/[YOUR REPO PATH]",
	"bugs": {
		"url": "https://github.com/[YOUR REPO PATH]/issues"
	},
	"keywords": [],
	"scripts": {
		"boot": "node build/index",
		"boot.local": "node -r ts-node/register -r tsconfig-paths/register ./src/index",
		"lint": "eslint '**/*.ts' && yarn lint.tsc",
		"lint.tsc": "tsc --noEmit && echo 'PASS'",
		"lint.fix": "eslint --fix '**/*.ts'",
		"lint.watch": "chokidar 'src/**/*' '../spruce-templates/src/**' -c 'yarn lint.tsc'",
		"health": "yarn run boot --health",
		"health.local": "yarn run boot.local --health",
		"build": "yarn build.babel",
		"build.types": "tsc --emitDeclarationOnly",
		"build.babel": "babel src --out-dir build --extensions '.ts, .tsx' --source-maps --copy-files",
		"build.watch": "babel src --out-dir build --extensions '.ts, .tsx' --source-maps --copy-files --watch",
		"clean": "rm -rf build/",
		"clean.all": "rm -rf build/ && rm -rf node_modules/"
	},
	"dependencies": {},
	"devDependencies": {}
}
