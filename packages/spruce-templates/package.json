{
	"name": "@sprucelabs/spruce-templates",
	"publishConfig": {
		"access": "public"
	},
	"version": "10.6.24",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"files": [
		"build/**/*",
		".spruce/**/*",
		"tsconfig.json",
		"package.json"
	],
	"description": "Command line interface for building Spruce skills",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"spruce",
		"skills",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-cli",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-cli/issues"
	},
	"scripts": {
		"build": "npm run copy-templates && npm run build.babel && npm run build.types",
		"build.node": "tsc",
		"build.types": "tsc --emitDeclarationOnly",
		"build.babel": "babel src --out-dir build --extensions \".ts,.tsx\" --root-mode upward",
		"build.watch": "babel src --out-dir build --extensions \".ts,.tsx\" --root-mode upward --watch",
		"watch": "chokidar 'src/**/*' -c 'npm run build'",
		"clean": "rm -rf build/",
		"copy-templates": "mkdirp ./build/templates && cp -r ./src/templates/* ./build/templates",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"release": "semantic-release",
		"local": "echo $COMMANDS && node --inspect=5200 ./build/src/index.js $COMMANDS",
		"arkit": "arkit -f index.ts -o docs/images/arkit.svg",
		"arkit.png": "arkit -f index.ts -o docs/images/arkit.png"
	},
	"dependencies": {
		"@sprucelabs/log": "^10.2.27",
		"@sprucelabs/schema": "^4.0.28",
		"globby": "^11.0.1",
		"handlebars": "^4.7.6",
		"lodash": "^4.17.19",
		"sha1": "^1.1.1"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.157",
		"@types/node": "^14.0.24",
		"arkit": "^1.6.4",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.2.0",
		"conventional-changelog-sprucelabs": "^1.1.1",
		"prettier": "^2.0.5",
		"typescript": "^3.9.7"
	},
	"gitHead": "94ce410c05180cdfa9b6ca4b9e47061d52ac4e71"
}
