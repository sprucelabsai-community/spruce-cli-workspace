{
	"name": "@sprucelabs/spruce-templates",
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"version": "13.1.2",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"files": [
		"build/**/*",
		"tsconfig.json",
		"package.json"
	],
	"description": "Templates used for code generation in skills!",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"spruce",
		"skills",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-cli-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-cli-workspace/issues"
	},
	"scripts": {
		"build": "yarn build.babel && yarn build.types && yarn build.resolve-paths",
		"build.types": "tsc --emitDeclarationOnly && echo PASS",
		"build.babel": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps --root-mode upward --copy-files --include-dotfiles",
		"build.resolve-paths": "resolve-path-aliases --target build",
		"rebuild": "cd ../ && yarn rebuild",
		"clean": "rm -rf build/",
		"copy-templates": "mkdirp ./build/templates && cp -r ./src/templates/* ./build/templates",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"release": "semantic-release",
		"local": "echo $COMMANDS && node --inspect=5200 ./build/src/index.js $COMMANDS",
		"watch.build": "concurrently 'yarn build.babel --watch' \"chokidar 'src/**/*' -c 'yarn build.types && yarn build.resolve-paths'\"",
		"arkit": "arkit -f index.ts -o docs/images/arkit.svg",
		"arkit.png": "arkit -f index.ts -o docs/images/arkit.png"
	},
	"dependencies": {
		"@sprucelabs/log": ">=10.2.295",
		"@sprucelabs/schema": ">=19.0.0",
		"@sprucelabs/spruce-skill-utils": ">=13.5.1",
		"globby": "^11.0.1",
		"handlebars": "^4.7.6",
		"lodash": "^4.17.20",
		"sha1": "^1.1.1"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.165",
		"@types/node": "^14.14.16",
		"arkit": "^1.6.4",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.3.0",
		"conventional-changelog-sprucelabs": "^1.1.2",
		"prettier": "^2.2.1",
		"typescript": "^4.1.3"
	},
	"yarn-upgrade-all": {
		"ignore": [
			"socket.io",
			"socket.io-client",
			"@sprucelabs/babel-plugin-schema",
			"@sprucelabs/error",
			"@sprucelabs/jest-sheets-reporter",
			"@sprucelabs/log",
			"@sprucelabs/mercury",
			"@sprucelabs/mercury-client",
			"@sprucelabs/mercury-event-emitter",
			"@sprucelabs/mercury-types",
			"@sprucelabs/schema",
			"@sprucelabs/semantic-release",
			"@sprucelabs/spruce-core-schemas",
			"@sprucelabs/spruce-skill-utils",
			"@sprucelabs/test",
			"@sprucelabs/test-utils"
		]
	},
	"gitHead": "94ce410c05180cdfa9b6ca4b9e47061d52ac4e71"
}
