{
	"name": "@sprucelabs/spruce-templates",
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"version": "10.17.34",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"files": [
		"build/**/*",
		"tsconfig.json",
		"package.json"
	],
	"description": "Templates used for code generation in skills!",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"spruce",
		"skills",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-cli-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-cli-workspace/issues"
	},
	"scripts": {
		"build": "yarn build.babel && yarn build.types",
		"build.types": "tsc --emitDeclarationOnly && echo PASS",
		"build.babel": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps --root-mode upward --copy-files",
		"build.watch": "concurrently 'yarn build.babel --watch' \"chokidar 'src/**/*' -c 'yarn build.types'\"",
		"rebuild": "cd ../ && yarn rebuild",
		"clean": "rm -rf build/",
		"copy-templates": "mkdirp ./build/templates && cp -r ./src/templates/* ./build/templates",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"release": "semantic-release",
		"local": "echo $COMMANDS && node --inspect=5200 ./build/src/index.js $COMMANDS",
		"arkit": "arkit -f index.ts -o docs/images/arkit.svg",
		"arkit.png": "arkit -f index.ts -o docs/images/arkit.png"
	},
	"dependencies": {
		"@sprucelabs/log": "^10.2.78",
		"@sprucelabs/schema": "^7.0.49",
		"@sprucelabs/spruce-skill-utils": "^10.17.34",
		"globby": "^11.0.1",
		"handlebars": "^4.7.6",
		"lodash": "^4.17.19",
		"sha1": "^1.1.1"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.159",
		"@types/node": "^14.0.27",
		"arkit": "^1.6.4",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.2.0",
		"conventional-changelog-sprucelabs": "^1.1.1",
		"prettier": "^2.0.5",
		"typescript": "^3.9.7"
	},
	"gitHead": "94ce410c05180cdfa9b6ca4b9e47061d52ac4e71"
}
