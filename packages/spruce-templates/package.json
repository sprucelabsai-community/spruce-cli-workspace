{
	"name": "@sprucelabs/spruce-templates",
	"publishConfig": {
		"access": "public"
	},
	"version": "10.4.0",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"files": [
		"build/**/*",
		".spruce/**/*",
		"tsconfig.json",
		"package.json"
	],
	"description": "Command line interface for building Spruce skills",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"spruce",
		"skills",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-cli",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-cli/issues"
	},
	"scripts": {
		"build": "npm run clean && npm run copy-templates && npm run build:node",
		"build:node": "tsc",
		"watch": "chokidar 'src/**/*' 'index.ts' -c 'npm run build'",
		"clean": "rm -rf build/",
		"copy-templates": "mkdirp ./build/src/templates && cp -r ./src/templates/* ./build/src/templates",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint:fix": "eslint --fix '**/*.ts'",
		"release": "semantic-release",
		"local": "echo $COMMANDS && node --inspect=5200 ./build/src/index.js $COMMANDS"
	},
	"dependencies": {
		"@sprucelabs/log": "^10.2.1",
		"@sprucelabs/schema": "^1.35.0",
		"globby": "^11.0.0",
		"handlebars": "^4.7.4",
		"lodash": "^4.17.15",
		"sha1": "^1.1.1"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.149",
		"@types/node": "^13.7.7",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.0.2",
		"conventional-changelog-sprucelabs": "^1.1.0",
		"prettier": "^1.13",
		"typescript": "^3.8"
	}
}
