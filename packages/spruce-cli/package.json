{
	"name": "@sprucelabs/spruce-cli",
	"publishConfig": {
		"access": "public"
	},
	"version": "10.0.11",
	"bin": {
		"spruce": "./build/src/index.js"
	},
	"main": "./build/src/index.js",
	"types": "./build/index.d.ts",
	"files": [
		"**/*"
	],
	"description": "Command line interface for building Spruce skills",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"spruce",
		"skills",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-cli-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-cli-workspace/issues"
	},
	"scripts": {
		"types:sync": "node ./build/src/index.js types:sync",
		"build": "npm run clean && npm run build:node",
		"build:node": "tsc",
		"watch": "chokidar '.spruce/**' 'src/**/*' 'index.ts' '../spruce-templates/src/templates/**/*' -c 'npm run build'",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint:fix": "eslint --fix '**/*.ts'",
		"release": "semantic-release",
		"start": "echo $COMMANDS && DEBUG=@sprucelabs/cli~debug node --inspect=5200 ./build/src/index.js $COMMANDS",
		"local": "echo $COMMANDS && DEBUG=@sprucelabs/cli~debug node -r ts-node/register --inspect=5200 ./src/index $COMMANDS",
		"local:noDebug": "echo $COMMANDS && DEBUG=@sprucelabs/cli~debug node -r ts-node/register ./src/index $COMMANDS",
		"#test": "ava **/*.test.ts",
		"#test:watch": "ava  **/*.test.ts --watch"
	},
	"dependencies": {
		"@sprucelabs/error": "^1.0.11",
		"@sprucelabs/log": "^10.2.1",
		"@sprucelabs/mercury": "10.2.0",
		"@sprucelabs/path-resolver": "^1.0.10",
		"@sprucelabs/schema": "^1.0.18",
		"@sprucelabs/spruce-templates": "^10.0.11",
		"@types/promise.allsettled": "^1.0.3",
		"cfonts": "^2.8.1",
		"chokidar": "^3.3.1",
		"commander": "^4.1.1",
		"dotenv": "^8.2.0",
		"emphasize": "^3.0.0",
		"fs-extra": "^8.1.0",
		"globby": "^11.0.0",
		"graphql": "^14.6.0",
		"graphql-tag": "^2.10.3",
		"inquirer": "^7.0.6",
		"inquirer-file-tree-selection-prompt": "^1.0.5",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.15",
		"minimatch": "^3.0.4",
		"ora": "^4.0.3",
		"promise.allsettled": "^1.0.2",
		"rimraf": "^3.0.2",
		"slug": "^2.1.1",
		"string-argv": "^0.3.1",
		"ts-node": "^8.8.2",
		"tsutils": "^3.17.1",
		"typescript": "^3.8.3",
		"vm2": "^3.9.1"
	},
	"devDependencies": {
		"@sprucelabs/test": "^1.1.0",
		"@types/fs-extra": "^8.1.0",
		"@types/inquirer": "^6.5.0",
		"@types/jsonwebtoken": "^8.3.8",
		"@types/lodash": "^4.14.149",
		"@types/mkdirp": "^1.0.0",
		"@types/node": "^13.7.7",
		"@types/rimraf": "^3.0.0",
		"@types/slug": "^0.9.1",
		"@types/superagent": "^4.1.7",
		"ava": "^3.6.0",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.0.2",
		"conventional-changelog-sprucelabs": "^1.1.0",
		"mkdirp": "^1.0.3",
		"prettier": "^1.13"
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		]
	}
}
